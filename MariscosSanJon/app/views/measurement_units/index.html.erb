<% if(notice) %>
  <div class="card-panel">
        <span class="blue-text text-darken-2"> <%= notice %> </span>
  </div>
<% end  %>
<div class="container">
<h5>Unidades de Medida</h5>
  <table width="70%">
    <thead>
      <tr>
        <th>Nombre Unidad </th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @measurement_units.each do |measurement_unit| %>
        <tr>
          <td><%= measurement_unit.name %></td>
          <td><%= link_to 'Editar', edit_measurement_unit_path(measurement_unit), :class  => "waves-effect waves-light btn category-text blue" %></td>
          <td><%= link_to 'Eliminar', measurement_unit, method: :delete, data: { confirm: 'Seguro que deseas eliminar?' }, :class => "waves-effect waves-light btn category-text red" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Nueva Unidad de Medida', new_measurement_unit_path, :class => "waves-effect waves-light btn category-text" %>
</div>