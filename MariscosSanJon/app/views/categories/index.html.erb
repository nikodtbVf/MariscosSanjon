<% if(notice) %>
  <div class="card-panel">
        <span class="blue-text text-darken-2"><%= notice %> </span>
  </div>
<% end %>
<div class="container">
  <h4>Categorias</h4>
  <table width="70%">
    <thead>
      <tr>
        <th>Categoría </th>
        <th colspan="2"></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.name %></td>
          <td><%= link_to 'Editar', edit_category_path(category), :class  => "waves-effect waves-light btn category-text blue" %></td>
          <td><%= link_to 'Eliminar', category, method: :delete, data: { confirm: 'Seguro que deseas eliminar?' }, :class => "waves-effect waves-light btn category-text red" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  <%= link_to 'Agregar Categoría', new_category_path, :class => "waves-effect waves-light btn category-text" %>
</div>