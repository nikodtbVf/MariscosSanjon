<p id="notice"><%= notice %></p>

<h4>Categorias</h4>

<table>
  <thead>
    <tr>
      <th>Categoría </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to 'Mostrar', category %></td>
        <td><%= link_to 'Editar', edit_category_path(category) %></td>
        <td><%= link_to 'Eliminar', category, method: :delete, data: { confirm: 'Seguro que deseas eliminar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Agregar Categoría', new_category_path, :class => "waves-effect waves-light btn" %>
